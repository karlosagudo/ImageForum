<div class="container create-form bg-primary">
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            {{ form_row(form.title) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            {{ form_row(form.image) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-5">
            <button class="btn btn-primary" type="submit">Create new message</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>